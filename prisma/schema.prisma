generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(uuid())
  telegramId String   @unique
  solana     String?  @unique
  bsc        String?  @unique
  tron       String?  @unique
  balance    Float    @default(0)
  trades     Trade[]
  createdAt  DateTime @default(now())
}

model Market {
  id            String   @id @default(uuid())
  question      String
  status        String   @default("open") // open | locked | settled
  eventTime     DateTime
  resolutionTime DateTime?  // When market officially closes
  forecast      Float?
  outcome       String?  // "yes" | "no"
  externalId    String   @unique  // ForexFactory event ID
  poolYes       Float    @default(0)
  poolNo        Float    @default(0)
  feeCollected  Float    @default(0)  // House earnings
  trades        Trade[]
  createdAt     DateTime @default(now())
}

model Trade {
  id        String   @id @default(cuid())
  userId    String
  marketId  String
  type      String   // "yes" | "no"
  amount    Float
  fee       Float    @default(0)  // 1% trade fee
  shares    Float    // CPMM shares bought
  settled   Boolean  @default(false)
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [telegramId])
  market    Market   @relation(fields: [marketId], references: [id])
}